{
	"name": "@helix-server/core",
	"version": "0.1.0",
	"description": "Core functionality of Helix Server",
	"private": false,
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	},
	"type": "module",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			}
		},
		"./package.json": "./package.json"
	},
	"files": [
		"dist"
	],
	"author": "LeandroEPK <leandro.kondratzky@gmail.com>",
	"contributors": [
		{
			"email": "simonvillafanee@gmail.com",
			"name": "Simón Villafañe",
			"url": "https://github.com/itssimmons"
		}
	],
	"keywords": [
		"helix",
		"helix-server",
		"server",
		"framework",
		"web",
		"api",
		"bun",
		"nodejs",
		"typescript",
		"extensible",
		"performance",
		"lightweight",
		"http",
		"https",
		"tcp",
		"middleware",
		"routing",
		"plugins"
	],
	"homepage": "https://github.com/helix-server/helix#readme",
	"bugs": {
		"url": "https://github.com/helix-server/helix/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/helix-server/helix.git"
	},
	"scripts": {
		"build": "bunup",
		"dev": "bunup --watch",
		"postinstall": "bun simple-git-hooks",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"publish": "npm publish --access public",
		"release": "bumpp --commit --push --tag",
		"test": "bun test",
		"test:coverage": "bun test --coverage",
		"test:watch": "bun test --watch",
		"type-check": "tsc --noEmit",
		"format": "biome format . --write"
	},
	"devDependencies": {
		"@types/bun": "^1.3.5",
		"@types/node": "^25.0.3",
		"@repo/typescript-config": "workspace:*",
		"@repo/biome-config": "workspace:*",
		"bumpp": "^10.3.2",
		"bunup": "^0.16.10",
		"simple-git-hooks": "^2.13.1",
		"typescript": "^5.9.3",
		"@biomejs/biome": "^2.3.8"
	},
	"peerDependencies": {
		"typescript": ">=4.5.0"
	},
	"peerDependenciesMeta": {
		"typescript": {
			"optional": true
		}
	},
	"simple-git-hooks": {
		"pre-commit": "bun run lint && bun run type-check"
	}
}
